---
import Section from "../layouts/Section.astro";
import Speaker from "./Speaker.astro";
import speakers from "../scripts/speakers.ts";
---

<Section id="speakers">
    <h2 class="h200-regular max-width-m">
        Con ponentes que te van a dejar <span class="text-brand-secondary-300">muy buen sabor de boca</span>
    </h2>

    <div class="speakers space-l-top">
        {
            speakers.map(speaker => (
                    <Speaker name={speaker.name} position={speaker.position} image={speaker.image} href={`/speakers/${speaker.slug}`}/>
            ))
        }
    </div>
</Section>

<style>
    .speakers {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-m);
        justify-content: center;
    }
</style>