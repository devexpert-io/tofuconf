---
import Section from "../layouts/Section.astro";
import Button from "./Button.astro";
---
<Section background="var(--base-800)" textColor="var(--base-000)" contentPadding="var(--space-xs)">
    <nav>
        <ul class="b200-regular">
            <li><a class="option" href="#home">La Tofu</a></li>
            <li><a class="option" href="#speakers">Speakers</a></li>
            <li><a class="option" href="#sponsors">Sponsors</a></li>
            <li><a class="option" href="#schedule">Agenda</a></li>
            <li><Button text="Comprar Entrada" link="https://google.com" /></li>
        </ul>
    </nav>
</Section>

<style>
    nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background: var(--base-800);
        padding: var(--space-xs);
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    nav li {
        margin: 0;
        padding: 0;
    }

    nav a {
        display: inline-block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: inherit;
        transition: background-color 0.3s, color 0.3s;
    }

    nav .option:hover {
        color: var(--brand-primary-100);
        text-decoration: underline;
    }
</style>