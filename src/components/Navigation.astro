---
import Section from "../layouts/Section.astro";
import Button from "./Button.astro";
import {Icon} from "astro-icon";
import {ticketsUrl} from "../scripts/global";
---
<Section background="var(--base-800)" textColor="var(--base-000)" contentPadding="var(--space-xs)">
    <nav>
        <div class="menu-icon"><Icon class="icon" name="mdi:menu"/></div>
        <ul>
            <li><a class="option nav-link" data-target="#home" href="#home">La Tofu</a></li>
            <li><a class="option nav-link" data-target="#speakers" href="#speakers">Speakers</a></li>
            <li><a class="option nav-link" data-target="#sponsors" href="#sponsors">Sponsors</a></li>
            <li><a class="option nav-link" data-target="#schedule" href="#schedule">Agenda</a></li>
            <li><Button text="Comprar Entrada" link={ticketsUrl} newTab={true} /></li>
        </ul>
    </nav>
</Section>

<style>
    nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background: var(--base-800);
        padding: var(--space-xs);
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    nav li {
        margin: 0;
        padding: 0;
    }

    nav a {
        display: inline-block;
        padding: 0.5rem 1rem;
        text-decoration: none;
        color: inherit;
        transition: background-color 0.3s, color 0.3s;
    }

    nav .option:hover {
        color: var(--brand-tertiary-200);
        text-decoration: underline;
    }

    .menu-icon {
        display: none;
        padding: 1rem;
        width: auto;
    }

    .icon {
        color: var(--base-000);
        width: 1.5rem;
    }

    @media (max-width: 768px) {
        nav ul {
            flex-direction: column;
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: var(--base-800);
        }

        nav li {
            text-align: center;
            padding: 0.5rem 0;
        }

        .menu-icon {
            display: inline-block;
            cursor: pointer;
        }
    }
</style>