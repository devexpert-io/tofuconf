---
import {Image} from "astro:assets"
import type {ImageMetadata} from "astro";
interface Props {
    name: string;
    position: string;
    image: ImageMetadata;
}

const { name, position, image } = Astro.props;
---

<div class="speaker">
    <Image src={image} class="logo space-s-bottom" alt="TofuConf logo"/>
    <h3 class="h300-regular">{name}</h3>
    <p class="text-base-600">{position}</p>
</div>

<style>
    .speaker {
        flex: 1 1 calc(33.333% - var(--space-m));
        max-width: 500px;
    }
</style>