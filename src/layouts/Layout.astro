---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#141414">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Metaetiquetas Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="El evento #gastrotech donde nadie muere de hambre" />
		<meta property="og:image" content="/tofuconf-thumbnail.jpg" />
		<meta property="og:url" content="https://www.tofuconf.com" />
		<meta name="twitter:card" content="summary_large_image" />
	</head>
	<script>
		import "../scripts/nav.js";
		import '../scripts/strong-colors.ts';
	</script>
	<body>
		<slot />
	</body>
</html>
